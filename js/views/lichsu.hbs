<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CK Bank | Lịch sử</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <header class="header headermana">

        <a href="/index" class="logo">
            <img src="images/Flash.png" alt="">
        </a>

        <nav class="navbar ulnav">
            <!-- Chức năng chung -->
            <a href="/index">Home</a>
            <!-- Chức năng admin -->
            
            {{#if user.auth}}
            <li class="dropdown">
                <a href="/manager" class="dropbtn">Manage</a>
                <div class="dropdown-content">
                    <a href="/manager#kichhoat">Chờ xác minh</a>
                    <a href="/manager#kichhoated">Đã xác minh</a>
                    <a href="/manager#vohieu">Bị vô hiệu hóa</a>
                    <a href="/manager#khoa">Bị khóa vô thời hạn</a>
                    <a href="/manager#gdrut">Giao dịch rút tiền</a>
                    <a href="/manager#gdchuyen">Giao dịch chuyển tiền</a>
                </div>
            </li>
            {{/if}}
            
            <!-- Chức năng chung -->
            <a href="/index#about">About</a>
            <a href="/index#menu">Menu</a>
            <a href="/index#products">Card</a>
            <a href="/index#contact">Contact</a>
            <a href="/index#logout">Logout</a>

        </nav>

        <div class="icons">
            <div id="user-btn">
                <a href="/info" class="fa-solid fa-user"></a>
            </div>

            <div class="fas fa-bars" id="menu-btn"></div>
        </div>

    </header>


    <section class="lichsu" id="lichsu">
        <h1 class="heading"> Lịch sử <span>giao dịch </span> </h1>
        <div class="container container-lichsu my-3">
            <table class="lichsutb">
                <tr class="lichsutr">
                    <th class="lichsuth">STT</th>
                    <th class="lichsuth">Số tiền</th>
                    <th class="lichsuth">Ngày</th>
                    <th class="lichsuth">Giao dịch</th>
                    <th class="lichsuth">Trạng thái</th>
                    <th class="/lichsuth">...</th>
                </tr>
 
                {{#each rows}} 
                    {{#equals this.trading_type 'Nạp tiền'}}
                    <tr class="lichsutr">
                        <td class="lichsutd">{{count @index}}</td>
                        <td class="lichsutd">{{this.money_transfer}}</td>
                        <td class="lichsutd">{{this.day_trading}}</td>
                        <td class="lichsutd">{{this.trading_type}}</td>
                        <td class="lichsutd">{{this.trading_status}}</td>
                        <td class="lichsutd">
                            <a href="/lichsunap/{{this.ma_Giao_Dich}}">Xem</a>
                        </td>
                    </tr>
                    {{/equals}}

                    {{#equals this.trading_type 'Rút tiền'}}
                    <tr class="lichsutr">
                        <td class="lichsutd">{{count @index}}</td>
                        <td class="lichsutd">{{this.money_transfer}}</td>
                        <td class="lichsutd">{{this.day_trading}}</td>
                        <td class="lichsutd">{{this.trading_type}}</td>
                        <td class="lichsutd">{{this.trading_status}}</td>
                        <td class="lichsutd">
                            <a href="/lichsurut/{{this.ma_Giao_Dich}}">Xem</a>
                        </td>
                    </tr>
                    {{/equals}}

                    {{#equals this.trading_type 'Chuyển tiền'}}
                    <tr class="lichsutr">
                        <td class="lichsutd">{{count @index}}</td>
                        <td class="lichsutd">{{this.money_transfer}}</td>
                        <td class="lichsutd">{{this.day_trading}}</td>
                        <td class="lichsutd">{{this.trading_type}}</td>
                        <td class="lichsutd">{{this.trading_status}}</td>
                        <td class="lichsutd">
                            <a href="/lichsuchuyen/{{this.ma_Giao_Dich}}">Xem</a>
                        </td>
                    </tr>
                    {{/equals}}


                {{/each}}

            </table>
        </div>

    </section>



    <section class="footer">

        <div class="share">
            <a href="#" class="fab fa-facebook-f"></a>
            <a href="#" class="fab fa-twitter"></a>
            <a href="#" class="fab fa-instagram"></a>
        </div>

        <div class="links">
            <a href="/index">home</a>
            <a href="/index#about">about</a>
            <a href="/index#menu">menu</a>
            <a href="/index#products">card</a>
            <a href="/index#contact">contact</a>
        </div>

        <div class="credit">created by <span>us</span></div>

    </section>


    <script src="js/main.js"></script>

</body>

</html>