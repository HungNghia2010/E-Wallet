    <link rel="stylesheet" href="css/style.css">
</head>

<body class="login-body">


    <div id="wrapper" class="wrapper">


        <form class="form-login" id="form-login" onsubmit="return validateInput()" action="" method="post">
            <h1 class="form-heading">Login Form</h1>
            <div class="form-group form-group-admin ">
                <i class="far fa-user"></i>
                <input value="" type="text" onclick="clearError()" class="form-input form-input-admin" id="username" placeholder="Enter username" name="username">
            </div>

            <div class="form-group form-group-admin">
                <i class="fas fa-key"></i>
                <input value="" type="password" onclick="clearError()" class="form-input form-input-admin" id="pwd" placeholder="Enter password" name="pwd">
                <div id="eye">
                    <i class="far fa-eye"></i>
                </div>
            </div>
            <div id="errorMessage" class="errorMessage my-3">
                <div class='alert alert-danger'></div>
            </div>
            <button class="form-submit" type="submit" class="btn btn-default">Login now</button>
            <button class="form-submit" type="submit" class="btn btn-default"><a href="/register">Register A New Account</a></button>
        </form>



    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="js/script.js"></script>
</body>

</html>