<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CK Bank | Register</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section class="about-me register-form" id="about-me">

        <div class="container container-about-me">
            <div class="title">Register</div>
            <div class="content content-about-me">
                <form class="form-about-me" action="/auth/register" method="post">
                    <div id="content-img">
                        <div class="about-me-image">
                            <img src="/images/empicon.jpg" class="rounded-circle " width="150">
                        </div>
                    </div>
                    <!-- <div class="about-me-image">
                        <img src="images/empicon.jpg" class="rounded-circle " width="150">
                    </div>

                    <div class="about-me-image about-me-image2">
                        <img src="images/ngoc.jpg" class="rounded-circle " width="150">
                    </div> -->

                    <div class="user-details">

                        <div class="input-box">
                            <span class="details">Họ và tên</span>
                            <input value="" type="text" placeholder="" id="name" name="name">
                        </div>
                        <div class="input-box">
                            <span class="details">Ngày sinh</span>
                            <input value="" type="text" placeholder="" id="birth" name="birth" >
                        </div>
                        <div class="input-box">
                            <span class="details">Email</span>
                            <input value="" type="text" placeholder="" id="email" name="email" >
                        </div>
                        <div class="input-box">
                            <span class="details">Số điện thoại</span>
                            <input value="" type="text" placeholder="" id="phone" name="phone" >
                        </div>
                        <div class="input-box">
                            <span class="details">CMND/CCCD</span>
                            <input value="" type="text" placeholder="" id="cmnd" name="cmnd">
                        </div>
                        <div class="input-box">
                            <span class="details">Địa chỉ</span>
                            <input value="" type="text" placeholder="" id="address" name="address" >
                        </div>
                        <div class="input-box">
                            <span class="details">Mặt trước CMND</span>
                            <input class="file-upload-input" type="file">
                        </div>
                        <div class="input-box">
                            <span class="details">Mặt sau CMND</span>
                            <input class="file-upload-input" type="file">
                        </div>
                    </div>
                    {{#if success}}
                        <div id="dialogCont" class="dig-container">
                            <div class="dig-header">
                                Welcome!
                            </div>
                            <div id="digbody" class="dig-body">
                                <h4>{{success}}</h4>
                            </div>
                            <div class="dig-footer">
                                <a href="http://localhost:9090/login">Chuyển về trang đăng nhập</a>
                            </div>
                        </div>
                    {{/if}}

                    {{#if message}}
                        <div class="alert">
                            <span class="fas fa-exclamation-circle"></span>
                            <span class="msg">{{message}}</span>
                        </div>
                    {{/if}}


                    <div class="button register-button">
                        {{!-- <input type="button" value="Back" id="Backbutn">
                        <input type="submit" value="Register"> --}}
                        <button class="regisbutton"><a href="">Back</a></button>
                        <button class="regisbutton"><a href="">Register</a></button>
                    </div>
                </form>
            </div>
        </div>

    </section>






    <script src="/js/script.js"></script>

</body>

</html>