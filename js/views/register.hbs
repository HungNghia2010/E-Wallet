                    <div class="user-details">

                        <div class="input-box">
                            <span class="details">Họ và tên</span>
                            <input value="" type="text" placeholder="" id="name" name="name" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Ngày sinh</span>
                            <input value="" type="text" placeholder="" id="birth" name="birth" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Email</span>
                            <input value="" type="text" placeholder="" id="email" name="email" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Số điện thoại</span>
                            <input value="" type="text" placeholder="" id="phone" name="phone" required>
                        </div>
                        <div class="input-box">
                            <span class="details">CMND/CCCD</span>
                            <input value="" type="text" placeholder="" id="cmnd" name="cmnd" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Địa chỉ</span>
                            <input value="" type="text" placeholder="" id="address" name="address" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Mặt trước CMND</span>
                            <input class="file-upload-input" type="file">
                        </div>
                        <div class="input-box">
                            <span class="details">Mặt sau CMND</span>
                            <input class="file-upload-input" type="file">
                        </div>
                    </div>

                    <div class="button register-button">
                        <input type="button" value="Back" id="Backbutn">
                        <input type="submit" value="Register">
                    </div>
                </form>
            </div>
            {{#if message}}
                <h4>{{message}}</h4>
            {{/if}}
        </div>

    </section>



